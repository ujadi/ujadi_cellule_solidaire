<odoo>
    <record id="view_cellule_set_draft_wizard_form" model="ir.ui.view">
        <field name="name">cellule.set.draft.wizard.form</field>
        <field name="model">cellule.set.draft.wizard</field>
        <field name="arch" type="xml">
            <form string="Raison remise en draft">
                <group>
                    <field name="reason" placeholder="Expliquez pourquoi vous remettez cette cellule en draft..."/>
                </group>
                <footer>
                    <button string="Valider" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
