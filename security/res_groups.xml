        <!-- Groupe : Admin Ujadi -->
        <record id="group_admin_ujadi" model="res.groups">
            <field name="name">Administrateur UJADI</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- Groupe : Superviseur Ujadi -->
        <record id="group_superviseur_ujadi" model="res.groups">
            <field name="name">Superviseur UJADI</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- Groupe : Responsable -->
        <record id="group_responsable_ujadi" model="res.groups">
            <field name="name">Responsable Cellule</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="rule_responsable_membres" model="ir.rule">
            <field name="name">Responsable - Voir ses membres</field>
            <field name="model_id" ref="model_membre_cs"/>
            <field name="domain_force">[('cellule_id.responsable_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('cellule_solidaire_ujadi.group_responsable_ujadi'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
        </record>

        <!-- Groupe : Membre -->
        <record id="group_membre_ujadi" model="res.groups">
            <field name="name">Membre Cellule</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>
