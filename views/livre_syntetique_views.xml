<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vue Formulaire principale pour livre.syntetique -->
    <record id="view_livre_syntetique_form" model="ir.ui.view">
        <field name="name">livre.syntetique.form</field>
        <field name="model">livre.syntetique</field>
        <field name="arch" type="xml">
            <form string="Livre Synthétique">
            <header>
                    <button name="action_responsable" type="object" string="Saisie Responsable"
                             class="btn-primary"/>
                    <button name="action_validate_member" type="object" string="Validation Membre"
                             class="btn-success"/>
                    <button name="action_supervise" type="object" string="Validation Superviseur"
                             class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,responsable,validated,supervised"/>
                </header>
                <sheet>
                    <group string="Informations du membre" col="4">
                        <group>
                            <field name="photo_passport" widget="image" class="oe_avatar" options="{'preview_image': 'photo_passport'}" />
                         </group>   
                        <group>
                            <field name="membre_name" readonly="1"/>
                        </group>
                        <group>
                        <field name="cellule_solidaire_name"/>
                        </group>
                        <group>
                            <field name="respo_name" readonly="1"/>
                        </group>
                    </group>

                    <group string="Parts par semaine">
                            <group>
                                <field name="part_price_first_week"/>
                                <field name="first_week"/>
                                <field name="first_week_amount" readonly="1"/>
                            </group>
                            <group>
                                <field name="part_price_second_week"/>
                                <field name="second_week"/>
                                <field name="second_week_amount" readonly="1"/>
                            </group>
                            <group>
                                <field name="part_price_third_week"/>
                                <field name="third_week"/>
                                <field name="third_week_amount" readonly="1"/>
                            </group>
                            <group>
                                <field name="part_price_fourth_week"/>
                                <field name="fourth_week"/>
                                <field name="fourth_week_amount" readonly="1"/>
                            </group>
                    </group>
                    <group>
                    
                    <group string="Totaux">
                        <group>
                        <field name="total_month" readonly="1"/>
                        </group>
                        <group>
                        <field name="montant_chiffre" readonly="1"/>
                        </group>
                    </group>
                    </group>
                    <group string="Validation et Signatures">
                        <group>
                        <field name="digital_signature" widget="image" 
                               options="{'preview_image': 'digital_signature'}"/>
                        </group>
                        <group>
                        <field name="justificatif" widget="binary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Détails socials">
                            <!-- <field name="operation_ids" context="{'default_livre_syntetique_id': active_id}"/> -->
                            <field name="social"/>
                            <field name="social_debt" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter>
                    <field name="message_ids" widget="mail_thread" options="{'no_open': True}"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </chatter>
                <footer>
                    <button name="action_confirm" type="object" string="Confirmer" class="btn-primary"/>
                    <button name="action_draft" type="object" string="Mettre en Brouillon" class="btn-secondary"/>
                    <button string="Fermer" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Vue Liste / Tree -->
    <record id="view_livre_syntetique_tree" model="ir.ui.view">
        <field name="name">livre.syntetique.tree</field>
        <field name="model">livre.syntetique</field>
        <field name="arch" type="xml">
            <list string="Livre Synthétique">
                <field name="membre_id"/>
                <field name="cellule_id"/>
                <field name="total_month"/>
                <field name="montant_chiffre"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    <record id="action_livre_syntetique_operations" model="ir.actions.act_window">
        <field name="name">Opérations Livre Synthétique</field>
        <field name="res_model">livre.syntetique</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>
