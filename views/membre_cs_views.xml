<odoo>
    <record id="membre_cs_view_tree" model="ir.ui.view">
        <field name="name">membre.cs.list</field>
        <field name="model">membre.cs</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="phone_number"/>
                <field name="sexe"/>
                <field name="province_id"/>
                <field name="ville"/>
                <field name="commune"/>
                <field name="quartier"/>
                <field name="avenue" />    
                <field name="email" options="1"/>
            </list>
        </field>
    </record>
    
    <record id="membre_cs_view_form" model="ir.ui.view">
        <field name="name">membre.cs.form</field>
        <field name="model">membre.cs</field>
        <field name="arch" type="xml">
            <form string="Les Membres Cellule Solidaire">
            <header>
                <button name="action_open_livre_syntetique"
                    type="object"
                    string="Voir Livre SynthÃ©tique"
                    icon="fa-book"
                    class="oe_stat_button btn btn-success"
                    
                    />
            </header>
                <sheet>
                    <group>
                        <group>
                            <field name="photo" widget="image" class="oe_avatar"/>
                            <field name="name" placeholder="eg.: KASEREKA KISUBA KATALIKO"/>
                            <field name="sexe"/>
                            <field name="birth_day"/>
                            <field name="age" readonly="1"/>
                            <field name="phone_number" placeholder="eg.: +243 99 999 999"/>
                        </group>
                        <group string="Adresse">
                            <field name="province_id"/>
                            <field name="province_selected" invisible='1'/>
                            <field name="ville"
                                domain="[('province_id', '=', province_id)]"
                                /><field name="commune"/>
                            <field name="quartier"/>
                            <field name="avenue" /> 
                            <field name="photo_identity" widget="image" class="oe_avatar"/>     
                            <field name="cellule_id"/>              
                        </group>
                    </group>
                </sheet>
                <chatter>
                    <field name="message_ids" widget="mail_thread" options="{'no_open': True}"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </chatter>
            </form>
        </field>    
    </record>

    <record id="membre_cs_view_search" model="ir.ui.view">
        <field name="name">membre.cs.search</field>
        <field name="model">membre.cs</field>
        <field name="arch" type="xml">
            <search string="Membre Search">
                <field name="name"/>
                <field name="phone_number"/>
                <field name="sexe"/>
                <field name="birth_day"/>
                <field name="email"/>
                <field name="quartier"/>
                <field name="avenue"/>
            </search>
        </field>
    </record>    
    <record id="membre_cs_action" model="ir.actions.act_window">
        <field name="name">Membre Cs</field>
        <field name="res_model">membre.cs</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>