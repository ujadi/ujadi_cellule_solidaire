<odoo>
    <record id="cellule_solidaire_view_tree" model="ir.ui.view">
        <field name="name">cellule.solidaire.list</field>
        <field name="model">cellule.solidaire</field>
        <field name="arch" type="xml">
            <list string="Channel" editable="bottom">
                <field name="name"/>
                <field name="entity"/>
                <field name="province_id"/>
                <field name="ville"></field>
                <field name="responsable_id" widget="badge"/>
                <field name="state" widget="badge" statusbar_visible="draft,confirmed"/>
                <field name="membre_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="cellule_solidaire_view_form" model="ir.ui.view">
        <field name="name">cellule.solidaire.form</field>
        <field name="model">cellule.solidaire</field>
        <field name="arch" type="xml">
            <form string="Cellule Solidaire" >
                <header>
                <!-- Bouton Membres -->                     
                     <button name="action_confirm"
                             string="Confirmer"
                            type="object" 
                            state="draft"
                            class="btn-success"/>

                    <button name="action_open_set_draft_wizard"
                            string="Remettre en Draft"
                            type="object"
                            state="confirmed"
                            class="btn-secondary"/>
                            
                <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                         <group>
                            <field name="name" placeholder="eg.: LA VIE DE DIEU"/>
                            <field name="entity" placeholder="eg.: GOMA VILLE"/>     
                        </group>
                        <group>
                            <field name="province_id" placeholder="eg.: Nord-Kivu"/>
                            <field name="membre_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>    
                        <group>
                                <field name="responsable_id" mode="list">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="phone"/>
                                        <field name="sexe"/>
                                        <field name="province_id"/>
                                        <field name="email" invisible="1"/>
                                        <field name="quartier" invisible="1"/>
                                        <field name="avenue" invisible="1"/>
                                        <field name="photo" widget="image" class="oe_avatar"/>
                                    </list>                                
                                </field>                     
                        </group>             
                    <!-- </group> -->
                    <notebook>
                        <page string="Les Membres De La Cellule Solidaire">
                            <field name="membre_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter>
                    <field name="message_ids" widget="mail_thread" options="{'no_open': True}"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </chatter>
            </form>
        </field>
    </record>


     <record id="view_cellule_solidaire_kanban" model="ir.ui.view">
        <field name="name">cellule.solidaire.kanban</field>
        <field name="model">cellule.solidaire</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="responsable_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click cellule_{{ record.state.raw_value }}">
                            <div class="o_kanban_record_title">
                                <strong><field name="name"/></strong>
                            </div>
                            <div class="o_kanban_tags">
                                <span>
                                    <t t-if="record.responsable_id.raw_value">
                                        ðŸ‘¤ <t t-if="record.responsable_id.name"/>
                                    </t>
                                    <t t-else="">
                                        ðŸš« Pas de responsable
                                    </t>
                                </span>
                            </div>
                            <div class="o_kanban_footer mt8">
                                <t t-if="record.state.raw_value == 'draft'">
                                    <button type="object" name="action_confirm" class="btn btn-primary btn-sm">
                                        âœ… Confirmer
                                    </button>
                                </t>
                                <t t-if="record.state.raw_value == 'confirmed'">
                                    <button type="object" name="action_open_set_draft_wizard" class="btn btn-secondary btn-sm">
                                        ðŸ”„ Remettre en Draft
                                    </button>
                                </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="cellule_solidaire_view_search" model="ir.ui.view">
        <field name="name">cellule.solidaire.search</field>
        <field name="model">cellule.solidaire</field>
        <field name="arch" type="xml">
            <search string="Cellule Solidaire Search">
                <field name="name"/>
                <field name="entity"/>
                <field name="responsable_id"/>
                <field name="membre_ids"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="cellule_solidaire_action" model="ir.actions.act_window">
        <field name="name">Cellule Solidaire Action</field>
        <field name="res_model">cellule.solidaire</field>
        <field name="view_mode">kanban,list,form,search</field>
    </record>
</odoo>